{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch current file",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${file}"
            ]
        },
      {
          "type": "node",
          "request": "launch",
          "name": "Mocha All",
          "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
          "args": [
              "--require",
              "ts-node/register",
              "--require",
              "source-map-support/register",
              "--timeout",
              "999999",
              "--colors",
              "${workspaceFolder}/test/**/*.ts"
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "outFiles": [
              "${workspaceFolder}/dist/**/*.js"
          ]
      },
      {
          "type": "node",
          "request": "launch",
          "name": "Mocha Current File",
          "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
          "args": [
              "--require",
              "ts-node/register",
              "--require",
              "source-map-support/register",
              "--timeout",
              "999999",
              "--colors",
              "${file}"
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "outFiles": [
              "${workspaceFolder}/dist/**/*.js"
          ]
      }
    ]
  }