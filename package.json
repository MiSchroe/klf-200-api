{
  "name": "klf-200-api",
  "version": "3.1.3",
  "description": "This module provides a wrapper to the socket API of a Velux KLF-200 interface. You will need at least firmware 0.2.0.0.71 on your KLF interface for this library to work.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": {
    "name": "Michael Schroeder"
  },
  "dependencies": {
    "@types/promise-timeout": "^1.3.2",
    "promise-timeout": "^1.3.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.6.0",
    "@sinonjs/fake-timers": "^11.2.2",
    "@types/chai": "^4.3.8",
    "@types/chai-as-promised": "^7.1.7",
    "@types/chai-datetime": "0.0.38",
    "@types/mitm": "^1.3.6",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.8.6",
    "@types/sinon": "^10.0.19",
    "@types/sinon-chai": "^3.2.10",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "chai-bytes": "^0.1.2",
    "chai-datetime": "^1.8.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "mitm": "^1.7.2",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.2.1",
    "mocha-multi-reporters": "^1.5.1",
    "nock": "^13.3.4",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "sinon": "^16.1.0",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.2",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "nyc mocha",
    "lint": "eslint --ext .ts src test",
    "release": "release-script",
    "document": "typedoc"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MiSchroe/klf-200-api"
  },
  "keywords": [
    "klf-200",
    "klf200",
    "VELUX",
    "IoT"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MiSchroe/klf-200-api/issues"
  },
  "homepage": "https://mischroe.github.io/klf-200-api/"
}
