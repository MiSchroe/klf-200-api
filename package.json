    "mocha": "^9.1.3",
    "mocha-junit-reporter": "^2.0.2",
    "mocha-multi-reporters": "^1.1.7",
    "nock": "^11.9.1",
    "nyc": "^15.1.0",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.5.0",
    "sleep": "^6.2.0",
