    "@types/chai-as-promised": "^7.1.2",
    "@types/chai-datetime": "0.0.33",
    "@types/lolex": "^3.1.1",
    "@types/mitm": "^1.3.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.43",
    "@types/sinon": "^7.5.2",
    "@types/sinon-chai": "^3.2.4",
    "@types/sleep": "0.0.7",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
